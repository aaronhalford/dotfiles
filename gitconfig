[alias]
  aa = add --all
  ci = commit -v
  cl = clone --recursive
  co = checkout
  st = status -s

	tags = tag -l
	branches = branch -a
	remotes = remote -v
	amend = commit --amend --reuse-message=HEAD
	contributors = shortlog --summary --numbered

  l = log --pretty=oneline -n 10 --graph --abbrev-commit
  l25 = log --pretty=oneline -n 25 --graph --abbrev-commit
  l50 = log --pretty=oneline -n 50 --graph --abbrev-commit
  l100 = log --pretty=oneline -n 100 --graph --abbrev-commit
  gtd = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[apply]
	whitespace = fix

[commit]
  template = ~/.gitmessage

[core]
  autocrlf = input
	excludesfile = ~/.gitignore.global
	whitespace = space-before-tab,-indent-with-non-tab,trailing-space

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[credential]
  helper = cache --timeout=3600

[diff]
	renames = copies

[help]
	autocorrect = 1

[merge]
	log = true
  ff = false

[push]
	default = current

[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
	insteadOf = "github:"

[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
	insteadOf = "gist:"

[include]
  path = .gitconfig.local
