[alias]
	aa = add --all
	ap = add --patch
	ca = commit --amend
	ci = commit -v
	co = checkout
	st = status
	gtd = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[color]
  ui = auto
[commit]
  template = ~/.gitmessage
[core]
	excludesfile = ~/.gitignore.global
	autocrlf = input
[credential]
  helper = cache --timeout=3600
[merge]
	ff = only
[push]
  default = current
[include]
	path = .gitconfig.local
