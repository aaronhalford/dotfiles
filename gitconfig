[alias]
  aa = add --all
  ci = commit -v
  cl = clone --recursive
  co = checkout
  st = status -s

  tags = tag -l
  branches = branch -a
  remotes = remote -v
  amend = commit --amend --reuse-message=HEAD
  contributors = shortlog --summary --numbered

  l = log --pretty=oneline --graph --abbrev-commit
  gtd = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[apply]
  whitespace = fix

[commit]
  template = ~/.gitmessage

[core]
  autocrlf = input
  excludesfile = ~/.gitignore.global
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold # line info
  old = red # deletions
  new = green # additions

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[credential]
  helper = cache --timeout=3600

[diff]
  renames = copies

[help]
  autocorrect = 1

[merge]
  log = true
  ff = true

[push]
  default = current

[include]
  path = .gitconfig.local
[user]
	email = dev@aaronhalford.com
	name = Aaron Halford
